  <div class="container mt-5">
    <div class="card-deck">
      <% @users.each do |user| %>
        <div class="card" style="max-width: 15rem;" >
          <div class="card-header bg-light p-0 border-light">
            ユーザー情報
            <span class="float-right">
              <%= link_to admin_user_path(user.id) do %>
                <i class="fas fa-file-alt"></i>
              <% end %>
            </span>
            <span class="float-right">
              <%= link_to edit_admin_user_path(user.id) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </span>
            <span class="float-right">
              <%= link_to admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </span>
          </div>
          <% if user.user_image? %>
            <%= image_tag user.user_image.url, class: 'icon mx-auto' , size: '90x90' %>
          <% else %>
            <i class="fas fa-user-circle fa-5x mx-auto" aria-hidden="true"></i>
          <% end %>
          <div class="card-body mx-auto">
            <h4 class="card-title"><%= user.name %></h4>
          </div>
        </div>
    <% end %>
  </div>
</div>
