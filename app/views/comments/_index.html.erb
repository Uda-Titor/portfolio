<% comments.each do |comment| %>
  <% if comment.id.present? %>
    <div class="comment-content" id ="this_comment_<%= comment.id %>">
      <div class="media">
        <% if comment.user.user_image.present? %>
          <p><%= image_tag comment.user.user_image.url, class: 'icon', size: "32x32" %></p>
        <% else %>
          <p><i class="fas fa-user-circle fa-2x" aria-hidden="true"></i></p>
        <% end %>
        <div class="media-body">
          <p class="ml-3"><%= comment.content %></p>
          <p>
            <span><%= link_to "編集", edit_matter_comment_path(matter, comment), remote: true %></span>
            <span><%= link_to "削除", matter_comment_path(comment.matter_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %></span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
