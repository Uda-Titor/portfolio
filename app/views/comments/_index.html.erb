<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>">
          <p><%= comment.content %></p>
          <p><%= comment.user.name %></p>
          <p><%= link_to "コメント編集", edit_matter_comment_path(matter, comment), remote: true %></p>
          <p><%= link_to "コメント削除", matter_comment_path(comment.matter_id, comment.id), method: :delete, remote: true,
                                          data: { confirm: "本当に削除しますか?"} %></p>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
