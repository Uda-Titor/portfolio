<ul>
  <% informations.each do |information| %>
    <% if information.id.present? %>
      <li>
        <div class="information-content" id ="this_information_<%= information.id %>"></div>
        <p><%= information.content %></p>
        <p><%= link_to "コメント編集", edit_information_path(information), remote: true %></p>
        <p><%= link_to "コメント削除",information_path(information), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
