<% if user_signed_in? %>
  <% unless matter.user_id == current_user.id %>
    <% if matter.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
        <%=link_to matter_favorites_path(matter.id), method: :delete, remote: true do %>
          <i class="fas fa-thumbs-up fa-2x favorite-btn"></i>
          <%= matter.favorites.count %>
        <% end %>
    <% else %>
        <%=link_to matter_favorites_path(matter.id), method: :post, remote: true do %>
          <i class="fas fa-thumbs-up fa-2x unfavorite-btn"></i>
          <%= matter.favorites.count %>
        <% end %>
    <% end %>
  <% end %>
<% end %>
