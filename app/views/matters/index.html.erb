<p id="notice"><%= notice %></p>

<h1>Matters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longtitude</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Start_date</th>
      <th>Completion_date</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.title %></td>
        <td><%= matter.content %></td>
        <td><%= matter.address %></td>
        <td><%= matter.latitude %></td>
        <td><%= matter.longitude %></td>
        <td><%= matter.status %></td>
        <td><%= matter.priority %></td>
        <td><%= matter.start_date %></td>
        <td><%= matter.completion_date %></td>
        <td><%= matter.remark %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

