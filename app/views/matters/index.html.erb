<p id="notice"><%= notice %></p>

<h1>Matters</h1>
<%= search_form_for @search do |f| %>
  <%= f.label :title_cont, 'タイトル' %>
  <%= f.text_field :title_cont %>
  <%= f.label :status_eq, 'ステータス' %>
  <%= f.select :status_eq, [["未着手"],["工事中"],["工事完了"]], include_blank: "選択してください" %>
  <div>
    <%= f.submit '検索する' %>
  </div>
<% end %>
<%= search_form_for @search do |f| %>
<div>
  <%= f.submit 'リセット' %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th><%= sort_link(@search, :priority, '優先順位') %></th>
      <th><%= sort_link(@search, :created_at, '作成日時') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.title %></td>
        <td><%= matter.status %></td>
        <td><%= matter.priority %></td>
        <td><%= matter.created_at %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Matter', new_matter_path %>
