<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/colorbox2/2.7.1/css/colorbox.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/colorbox2/2.7.1/js/colorbox.min.js" type="text/javascript"></script>
  </head>
<header>
  <nav class="navbar navbar-expand-md navbar-color bg-color">
    <a class="navbar-brand">HERE DANGER!</a>
    <button class="navbar-toggler float-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if user_signed_in? %>
          <a class="nav-item nav-link active" href="#"><li><%= link_to '案件一覧', matters_path %></li><span class="sr-only">(current)</span></a>
          <% if current_user.admin? %>
            <a class="nav-item nav-link "href="#" ><li><%= link_to 'ユーザ一覧', admin_users_path %></li></a>
            <a class="nav-item nav-link"href="#" ><li><%= link_to '管理者画面', admin_matters_path %></li></a>
          <% end %>
        <% end %>
      </div>
      <div class="navbar-nav ml-auto mr-3">
        <% if user_signed_in? %>
          <a class="nav-item nav-link" href="#"><li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li></a>
          <a class="nav-item nav-link" href="#"><li><%= link_to current_user.name, users_show_path(current_user.id) %></li></a>
          <button type="button" class="btn btn-primary nav-item nav-link float-color ml-3" data-toggle="modal" data-target="#exampleModal">
            通知
            <span class="badge badge-light">
              <% notifications = get_notifications.where.not(visitor_id: current_user.id) %>
              <% if notifications.exists? %>
                <% if current_user.admin? %>
                  <%= notifications.where(admin_checked: false).length %>
                <% else %>
                  <%= notifications.where(checked: false).length %>
                <% end %>
              <% end %>
            </span>
          </button>
        <% else %>
        <a class="nav-item nav-link" href="#"><li><%= link_to 'ログイン', new_user_session_path %></li></a>
        <a class="nav-item nav-link" href="#"><li><%= link_to 'サインアップ', new_user_registration_path %></li></a>
        <% end %>
      </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">通知</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% if notifications.exists?  %>
              <%= render partial: 'notifications/notification', locals: { notifications: notifications} %>
              <%= paginate notifications %>
            <% else %>
              <p>通知はありません</p>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
  <body>
    <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
