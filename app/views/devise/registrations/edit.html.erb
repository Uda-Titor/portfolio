<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container bg-color mt-3 form p-2 rounded">
  <div class="row">
    <div class="col-md-8 mx-auto">
        <%= image_tag set_image(@user.icon, 'default.png'), class: 'icon' , id: :img_prev , size: '90x90' %>
        <div class="form-group">
          <%= f.label 'ユーザーアイコン' %> <br />
          <%= f.file_field :icon, placeholder:"アイコン", id: :icon %>
        </div>

        <script type="text/javascript">
          $(function() {
           function readURL(input) {
             if (input.files && input.files[0]) {
               var reader = new FileReader();
               reader.onload = function (e) {
                 $('#img_prev').attr('src', e.target.result);
               }
               reader.readAsDataURL(input.files[0]);
             }
           }
           $("#icon").change(function(){
             readURL(this);
           });
          });
        </script>

        <div class="form-group">
          <%= f.label 'ユーザー名' %>　<span class="badge badge-danger">必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'user' %>
        </div>

        <div class="form-group">
          <%= f.label 'メールアドレス' %>　<span class="badge badge-danger">必須</span>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label '電話番号' %>　<span class="badge badge-secondary">任意</span>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>

        <div class="field  form-group">
          <%= f.label '住所' %>　<span class="badge badge-secondary">任意</span>
          <%= f.text_field :user_place, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label '備考' %>　<span class="badge badge-secondary">任意</span>
          <%= f.text_area :remark, class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'password' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'password_confirmation' %>
        </div>

        <div class="actions">
          <%= f.submit t('.update'), class: 'btn btn-primary', id: 'update' %>
        </div>
      <% end %>

      <h3><%= t('.cancel_my_account') %></h3>

      <p><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'btn btn-danger', id: 'user_delete' %></p>

      <%= link_to t('devise.shared.links.back'), :back %>
    </div>
  </div>
</div>
