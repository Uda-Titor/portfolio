  <%= search_form_for search do |f| %>
    <div class="form-group">
      <%= f.label :content_cont, '要望内容' %>
      <%= f.text_field :content_cont, class: 'form-control', placeholder: "キーワードを入れてください" %>
    </div>

    <div class="form-group">
      <%= f.label :user_name_cont, "ユーザー名" %>
      <%= f.search_field :user_name_cont, class: 'form-control', placeholder: "お名前を入れてください" %>
    </div>

    <div class="form-group">
      <%= f.label :status_eq, 'ステータス' %>
      <%= f.select :status_eq, [["未着手"],["工事中"],["工事完了"]], { include_blank: "選択してください" }, { class: 'form-control' }  %>
    </div>

    <div class="form-group">
      <%= f.label :created_at_gteq, '日付(作成日時)' %>
      <%= f.date_field :created_at_gteq, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :created_at_lteq, '〜' %>
      <%= f.date_field :created_at_lteq, class: 'form-control' %>
    </div>
    <div>
      <%= f.submit '検索する', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= search_form_for @search do |f| %>
  <div class="mt-1">
    <%= f.submit 'リセット', class: 'btn btn-secondary' %>
  </div>
  <% end %>
